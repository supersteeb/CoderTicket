
<div class="row">
	<div class="col-sm-4">

		<%= form_for(venue) do |f| %>
			<% if venue.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(venue.errors.count, "errors") %>
						prohibited this event from being saved: </h2>
						<ul>
							<% venue.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
				</div>
			<% end %>

		  <div class="form-group">
		    <%= f.label :name %>
		    <%= f.text_field :name, class: 'form-control' %>
		  </div>

		  <div class="form-group">
		    <%= f.label :address %>
		    <%= f.text_field :full_address, class: 'form-control' %>

		  <div class="form-group">
		    <%= f.label :region_id %>
		    <%= f.select :region_id, Region.all.map {|u| [u.name, u.id]} %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Create Venue", class: 'btn btn-primary' %>
		  </div>
		<% end %>
		
	</div>
</div>