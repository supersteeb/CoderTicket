
<div class="row">
	<div class="col-sm-4">

		<%= form_for([@event, @ticket_type]) do |f| %>
			<% if @ticket_type.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@ticket_type.errors.count, "errors") %>
						prohibited this event from being saved: </h2>
						<ul>
							<% @ticket_type.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
				</div>
			<% end %>
			<%= f.hidden_field :event_id, :value => @event.id %>

		  <div class="form-group">
		    <%= f.label :name %>
		    <%= f.text_field :name, class: 'form-control' %>
		  </div>

		  <div class="form-group">
		    <%= f.label :price %>
		    <%= f.text_field :price, class: 'form-control' %>

		  <div class="form-group">
		    <%= f.label :max_quantity %>
		    <%= f.text_field :max_quantity, class: 'form-control' %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Create Ticket Type", class: 'btn btn-primary' %>
		  </div>
		<% end %>
		
	</div>
</div>