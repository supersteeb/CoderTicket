<div class="col-md-6">
  <%= link_to event_path(id: event.id) do %>
    <div class="card">
      <img class="card-img-top" src="<%= event.hero_image_url %>">
      <div class="card-block">
        <h4 class="card-title"><%= event.name %></h4>
        <p class="card-text"><%= sanitize truncate(event.extended_html_description, length: 45, omission: '...(continued)') %>
        </p>
      </div>
    </div>
  <% end %>
</div>  
