<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

  <nav class="navbar navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <li class="nav-item">
      <% if current_user %>
      <li class="nav-item">
        <%= link_to "Events", events_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Create New Event", new_event_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Create New Venue", new_venue_path, class: 'nav-link' %>
      </li>
      <% else %>
        <%= link_to "Log In", new_session_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_path, class: 'nav-link' %>
      </li>
      <% end %>
    </ul>

    <% if current_user %>
      <div class="alert alert-info col-sm-4 pull-right">
        Welcome, <%= current_user.name %>. Not you?
        <%= link_to "Log out", logout_path, method: 'delete', class: 'nav-link' %> |
        <%= link_to "Home", user_path(current_user), class: 'nav-link' %>
      </div>
    <% else %>
      <% link_to "Log in", new_session_path, class: 'nav-link' %>
    <% end %>
  </nav>  
<div>
  <%= flash_messages %>


<%= yield %>
</div>
</div>

</body>
</html>
